@model LoginRegister.Models.TransferDetails
@{
    ViewData["Title"] = "UserHome";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<h2>Home</h2>
<h3>
    Balance   @ViewData["Balance"]
</h3>

<form asp-action="UserHome">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ToAddress" class="control-label"></label>
        <input asp-for="ToAddress" class="form-control" />
        <span asp-validation-for="ToAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Transaction" class="btn btn-default btn-success" />
    </div>
</form>
